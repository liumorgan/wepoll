{
  "env": {
    "es6":  true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent":          [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "no-console":        "off",
    "no-var":            "error",
    "prefer-const":      "error", 
    "quotes":          [ "error", "single" ],
    "semi":            [ "error", "always" ]
  }
}